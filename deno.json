{
  "name": "@denostack/superserial",
  "version": "0.3.5",
  "tasks": {
    "test": "deno task test:unit && deno task test:lint && deno task test:format && deno task test:types",
    "test:format": "deno fmt --check",
    "test:lint": "deno lint",
    "test:unit": "deno test -A",
    "test:types": "find . -name '*.ts' -not -path './.npm/*' | xargs deno check",
    "bench": "deno run --allow-run --allow-write=.benchmark scripts/benchmark.ts",
    "build:npm": "deno run --allow-env --allow-read --allow-write --allow-run scripts/build_npm.ts"
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "ansi-to-svg": "npm:ansi-to-svg@1.4.3"
  },
  "exports": {
    ".": "./mod.ts",
    "./deserialize": "./deserialize.ts",
    "./serialize": "./serialize.ts",
    "./serializer": "./serializer.ts"
  },
  "lint": {
    "exclude": [".npm"]
  },
  "fmt": {
    "exclude": [".npm", ".benchmark"],
    "lineWidth": 120
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      ".benchmark",
      "scripts",
      "examples",
      "**/*.test.ts"
    ]
  }
}
